- if @errors
  .errors
    = @errors
%form{:method => "post", :action => "/send", :class => "center"}
  %ul.inputs
    %li
      %label{:for => "email_input"}
        Twój email
        %abbr{:class => 'required', :title => "Pole wymagane"}> *
      %input{:type => "email", :id => 'email_input', :name => "email", :autofocus => true, :required => true, :value => params['email']}
    %li
      %label{:for => "body_input"}
        Treść wiadomości
        %abbr{:class => 'required', :title => "Pole wymagane"}> *
      %textarea{:rows => 20, :id => "body_input", :name => "body", :required => true}
        = params['body']
  %ul.buttons
    %li
      %input{:type => "submit", :id => "submit_input", :name => "commit", :value => "Wyślij wiadomość"}
